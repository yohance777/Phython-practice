num1 = (input("enter the no. or word to check whether its palindrome or not"))
length = len(num1)

i = 0
is_palindrome = True
while i < length:
     if num1[i] != num1[length - i - 1]:
        is_not_palindrome = False
        break
i+=1
    



if is_palindrome:
    print(f"{num1} is palindrome")
         
elif is_not_palindrome:
    print(f"{num1} is not palindrome")
         
